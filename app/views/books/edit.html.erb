<div class='container'>
 <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <% if @book.errors.any? %>
   <div class="error-box">
    <h4 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    <ul class="error">
      <% @book.errors.full_messages.each do |message| %>
       <li class="error-messages"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  		<h1>Editing Book</h1>
    <%= form_with model: @book do |f| %>
