               <%= link_to 'Destroy', book_path, method: :delete, "data-confirm" =>"本当に削除しますか？" class:"btn btn-sm btn-danger" %>
              <% end %></td>
          <td colspan="5"></td>
      </tr>
     <% end %>
      </table>
    </div>
  </div>
</div>

