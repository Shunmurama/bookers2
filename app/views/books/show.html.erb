  <%= render 'books/list', user: @user,book: @book_new %>

   <div class='col-md-8 offset-md-1'>
       <% if @book.errors.any? %>
   <div class="error-box">
    <h4 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    <ul class="error">
      <% @book.errors.full_messages.each do |message| %>
       <li class="error-messages"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
           <div class="flex-column">
            <div>
             <% if @book.user.profile_image.attached? %>
              <%= link_to user_path(@book.user.id) do %>
               <%= image_tag @book.user.profile_image, size: "100x100" %>
              <% end %>
             <% else %>
              <%= link_to user_path(@book.user.id) do %>
               <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
             <% end %>
            </div>
                <div><%= link_to @book.user.name, user_path(@book.user) %></div>
           </div>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td><% if @book.user == current_user %>
                <%= link_to 'Edit', edit_book_path(@book.id),class:"btn btn-sm btn-success" %>
              <% end %></td>
          <td><% if @book.user == current_user %>
                <%= link_to 'Destroy', book_path, method: :delete, "data-confirm" =>"本当に削除しますか？", class:"btn btn-sm btn-danger" %>
              <% end %></td>
          <td colspan="5"></td>
      </tr>
      </table>
    </div>
