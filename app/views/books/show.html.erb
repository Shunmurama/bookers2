<% if @book.errors.any? %>
   <div class="error-box">
    <h4 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    <ul class="error">
      <% @book.errors.full_messages.each do |message| %>
       <li class="error-messages"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

  <%= render 'books/list', user: @user,book: @book_new %>


  <h2>Book detail</h2>

 <table>


  <tbody>
    <% @books.each do |book| %>

     <tr>
      <td><%= image_tag 'no_image.jpg' %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><% if @book.user == current_user %>
      <%= link_to 'Destroy', book_path, method: :delete, "data-confirm" =>"本当に削除しますか？" %>
      <% end %></td>

      <td colspan="5"></td>
     </tr>
     <% end %>
   </tbody>
 </table>
