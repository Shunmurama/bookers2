<% if @book.errors.any? %>
   <div class="error-box">
    <h4 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    <ul class="error">
      <% @book.errors.full_messages.each do |message| %>
       <li class="error-messages"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

  <%= render 'books/list', user: @user,book: @book_new %>

  
   <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		 <% @books.each do |book| %>
  		  <tr>
          <td><%= image_tag 'no_image.jpg' %></td>
          <td><%= link_to book.title, book_path(@book.id) %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id),class:"btn btn-sm btn-success" %></td>
