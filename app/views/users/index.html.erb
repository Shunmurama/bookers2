<% if @book.errors.any? %>
   <div class="error-box">
    <h4 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    <ul class="error">
      <% @book.errors.full_messages.each do |message| %>
       <li class="error-messages"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

  <%= render 'books/list', user: @user,book: @book %>

   <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><% if @user.image.attached? %>
               <%= image_tag @user.image, size: "50x50" %>
