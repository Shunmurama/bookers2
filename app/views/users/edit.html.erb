 <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
   <div class="error-box">
    <h4 class="error-text"><%= @user.errors.count %>error prohibited this obj from being saved:</h4>
    <ul class="error">
      <% @user.errors.full_messages.each do |message| %>
       <li class="error-messages"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
    <h2>User info</h2>
    <%= form_with model: @user do |f| %>
      <div class="form-group">
        <h6>name</h6>
          <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <h6>image</h6>
          <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <h6>introduce</h6>
          <%= f.text_area :introduce %>
      </div>
      <div class="form-group">
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>