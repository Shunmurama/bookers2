<% if @book.errors.any? %>
   <div class="error-box">
    <h4 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    <ul class="error">
      <% @book.errors.full_messages.each do |message| %>
       <li class="error-messages"><%= message %></li>
      <% end %>
    </ul>
    </div>
    <% end %>
 <%= render 'books/list', user: @user,book: @book %>


     <div class='col-md-8 offset-md-1'>
          <h2>Books</h2>
       <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><% if book.user.profile_image.attached? %>
                 <%= link_to user_path(book.user.id) do %>
                   <%= image_tag book.user.profile_image, size: "50x50" %>
                 <% end %>
                <% else %>
                 <%= link_to user_path(book.user.id) do %>
                   <%= image_tag 'no_image', size: "50x50" %>
                 <% end %>
                <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
      </tbody>
       <% end %>
      </table>
     </div>

